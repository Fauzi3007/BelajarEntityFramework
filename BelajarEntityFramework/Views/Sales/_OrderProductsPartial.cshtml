@model List<BelajarEntityFramework.Models.OrderItemChart>

<table class="table table-sm table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Line Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var lineTotal = item.UnitPrice * item.Quantity;
            <tr>
                <td>@item.Product?.Name</td>
                <td>@item.Quantity</td>
                <td>$@item.UnitPrice</td>
                <td>$@lineTotal</td>
            </tr>
        }
    </tbody>
</table>